<div class="panel panel-black">
                <div class="panel-heading">
                  <div class="category-title">
                    <h3 class="panel-title">
                        Top Albums</h3>
                      </div>
                </div>
    <ul class="list-group">
        <% for a in @albums %>
        <li class="list-group-item">
          <div class="row">
              <div class="col-sm-8">
                <strong><%= a.name %></strong>
                <br />
                <small><%=a.artist%></small>
              </div>
              <div class="col-sm-4">
                <div class="text-right">
                <%= a.score %>
              </div>
              </div>
          </div>
        <% end%>
    </ul>
  </div>
