<div class="panel panel-black">
                <div class="panel-heading">
                  <div class="category-title">
                    <h3 class="panel-title">
                        Top Albums</h3>
                      </div>
                </div>
    <ul class="list-group">
        <% for a in @albums %>
        <li class="list-group-item">
          <div class="row">
              <div class="col-sm-3">
                <img class="img-responsive" src="<%=a.avatar%>" alt="Album icon">
              </div>
              <div class="col-sm-7">
                <strong><%= link_to(a.name,a) %></strong>
                <br />
                <small><%=a.artist%></small>
              </div>
              <div class="col-sm-2">
                  <div class="text-center">
                    <%= color_score(a.score) %>
                  </div>
              </div>
          </div>
        <% end%>
    </ul>
  </div>
