<%= simple_form_for(@movie, class: 'form-horizontal' )  do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :release_date,  as: :string, input_html: {type: :date}%>
    <%= f.input :trailer %>
    <%= f.input :avatar %>
    <%= f.input :rating %>
    <%= f.input :importance %>
    <%= f.input :cast %>
    <%= f.input :director %>
    <%= f.input :duration %>
    <%= f.input :studio %>
    <%= f.button :submit %>
<% end %>
