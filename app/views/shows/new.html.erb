<%= simple_form_for(@show, class: 'form-horizontal' )  do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :release_date, required: true, as: :string, input_html: {type: :date}%>
    <%= f.input :trailer %>
    <%= f.input :avatar %>
    <%= f.input :rating %>
    <%= f.input :importance %>
    <%= f.input :cast %>
    <%= f.input :seasons %>
    <%= f.input :duration %>
    <%= f.input :episodes %>
    <%= f.button :submit %>
<% end %>
