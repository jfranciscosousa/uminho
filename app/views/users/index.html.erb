<div class="table-responsive">
    <table id="usersTable" class="table table-bordered">
        <thead>
            <tr>
                <th><%=Show.human_attribute_name(:name)%></th>
                <th><%=Show.human_attribute_name(:email)%></th>
                <th><%=Show.human_attribute_name(:birth_date)%></th>
                <th><%=Show.human_attribute_name(:gender)%></th>
                <th><%=Show.human_attribute_name(:country)%></th>
                <th><%=Show.human_attribute_name(:role)%></th>
                <% if can? :manage, User %>
                <th></th>
                <%end%>
            </tr>
        </thead>
        <tbody>
            <% for user in @users %>
            <tr>
                <td><%=user.name%></td>
                <td><%=user.email%></td>
                <td><%=user.birth_date%></td>
                <td><%=user.gender%></td>
                <td><%=user.country%></td>
                <td id="role<%=user.id%>"><%=user.role.capitalize%></td>
                <% if can? :manage, User %>
                <td>
                    <button class="btn btn-xs btn-primary" onclick='promoteUserModal(<%=user.id%>)'>Promote</button>
                </td>
                <%end%>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= render 'promote' %>
</div>

<script>
    $('#usersTable').DataTable();
</script>
